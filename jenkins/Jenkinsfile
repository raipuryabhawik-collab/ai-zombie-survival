pipeline {
    agent any
    environment { COMPOSE_FILE = "docker/docker-compose.yml" }

    stages {

        stage('Clone') { steps { checkout scm } }

        stage('Build') {
            steps { sh "docker compose -f ${COMPOSE_FILE} build" }
        }

        stage('Deploy') {
            steps { sh "docker compose -f ${COMPOSE_FILE} up -d" }
        }

        stage('Monitoring') {
            steps {
                sh '''
                curl -s http://localhost:9090/-/healthy > /dev/null || exit 1
                curl -s http://localhost:3000/api/health > /dev/null || exit 1
                '''
            }
        }
    }
}

