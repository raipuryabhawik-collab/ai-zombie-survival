pipeline {
    agent any

    environment {
        BACKEND_IMAGE = "docker-backend"
        FRONTEND_IMAGE = "docker-frontend"
        NAMESPACE = "game"
    }

    stages {

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/raipuryabhawik-collab/ai-zombie-survival.git'
            }
        }

        stage('Build Backend Image') {
            steps {
                sh 'docker build -t docker-backend:${BUILD_NUMBER} -f docker/Dockerfile.backend .'
                sh 'docker tag docker-backend:${BUILD_NUMBER} docker-backend:latest'
            }
        }

        stage('Build Frontend Image') {
            steps {
                sh 'docker build -t docker-frontend:${BUILD_NUMBER} -f docker/Dockerfile.frontend .'
                sh 'docker tag docker-frontend:${BUILD_NUMBER} docker-frontend:latest'
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh 'kubectl apply -f k8s/mongo.yaml -n game'
                sh 'kubectl apply -f k8s/backend-deployment.yaml -n game'
                sh 'kubectl apply -f k8s/frontend-deployment.yaml -n game'
                sh 'kubectl apply -f k8s/service.yaml -n game'
                sh 'kubectl apply -f k8s/ingress.yaml -n game'
            }
        }

        stage('Rolling Update Images') {
            steps {
                sh 'kubectl set image deployment/backend backend=docker-backend:${BUILD_NUMBER} -n game'
                sh 'kubectl set image deployment/frontend frontend=docker-frontend:${BUILD_NUMBER} -n game'
            }
        }

        stage('Verify Rollout') {
            steps {
                sh 'kubectl rollout status deployment/backend -n game'
                sh 'kubectl rollout status deployment/frontend -n game'
            }
        }
    }

    post {
        success {
            echo 'SUCCESS: Game deployed!'
        }
        failure {
            echo 'FAILED: Check logs'
        }
    }
}

